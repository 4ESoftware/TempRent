<div class="login-form">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}
        <h2 class="text-center">Log in</h2>
        <div class="form-group">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                   autocomplete="username"/>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password"/>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-block" id="_submit" name="_submit" value="Log in">
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/> Remember me
            </label>
            <a href="{{ path('fos_user_resetting_request') }}" class="pull-right">Forgot Password?</a>
        </div>
    </form>
    <p class="text-center"><a href="{{ path('fos_user_registration_register') }}">Create an Account</a></p>

    <div class="row">
        <div class="col-12 text-center">
            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" style="line-height: 50px; padding: 10px 34px 10px 45px;" class="loginBtn loginBtn--facebook">
                Continue with Facebook
            </a>
        </div>
    </div>
</div>



