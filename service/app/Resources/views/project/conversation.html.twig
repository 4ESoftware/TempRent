{% extends 'base.html.twig' %}

{% block body %}
    <div class="messaging">
        <div class="inbox_msg">

            <div class="mesgs">
                <div class="msg_history" id="msg_history">

                    {% for line in project.conversation %}
                        {% if line.whom == 0 %}
                            <div class="incoming_msg">
                                <div class="incoming_msg_img">
                                    <img src="https://cdn3.vectorstock.com/i/1000x1000/39/17/cute-robot-icon-vector-21513917.jpg"
                                         alt="robot">
                                </div>
                                <div class="received_msg">
                                    <div class="received_withd_msg">
                                        <p> {{ line.content }}
                                            <span class="time_date">{{ line.spokenAt | date("H:i") }}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="outgoing_msg">
                                <div class="sent_msg">
                                    <p>
                                        {{ line.content }}
                                        <span class="time_date">{{ line.spokenAt | date("H:i") }}</span>
                                    </p>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                    {% if project.status > 1 %}
                        <div class="end_of_conversation" style="
                                width: 100%;
                                text-align: center;
                                margin-top: 20px;
                                margin-bottom: 20px;
                            ">
                            <div class="badge badge-light" style="
                                color: #999;
                                padding: 6px 20px;
                            ">This conversation has ended! Please validate the results <a href="{{ path('project_validate', {id: project.id}) }}">here</a>!</div>
                        </div>
                    {% endif %}

                </div>
                <div class="type_msg" id="message_textbox">
                    {% if project.status == 1 %}
                    <div class="input_msg_write">
                        <input type="text" class="write_msg" id="message" placeholder="Type a message"/>
                        <button class="msg_send_btn" id="msg_send_btn" type="button"><i class="fa fa-paper-plane"
                                                                                        aria-hidden="true"></i></button>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        updateScroll();

        function formatTime() {
            var time = new Date;
            var minutes = time.getMinutes();
            var hours = time.getHours();

            if (hours < 10) {
                hours = '0' + hours;
            }
            if (minutes < 10) {
                minutes = '0' + minutes;
            }

            return hours + ':' + minutes;
        }

        function updateScroll() {
            var element = document.getElementById("msg_history");
            element.scrollTop = element.scrollHeight;
        }

        function makeHumanBubble(text) {
            var bubble = $('<div class="outgoing_msg"><div class="sent_msg"><p>' + text + '<span class="time_date">' + formatTime() + '</span></p></div></div>');
            $('#msg_history').append(bubble);

            updateScroll();
        }

        function makeRobotBubble(text) {
            var bubble = $('<div class="incoming_msg">\n' +
                '                        <div class="incoming_msg_img"><img\n' +
                '                                    src="https://cdn3.vectorstock.com/i/1000x1000/39/17/cute-robot-icon-vector-21513917.jpg"\n' +
                '                                    alt="robot"></div>\n' +
                '                        <div class="received_msg">\n' +
                '                            <div class="received_withd_msg">\n' +
                '                                <p>' + text +
                '                                <span class="time_date">' + formatTime() + '</span></p></div>\n' +
                '                        </div>\n' +
                '                    </div>');

            $('#msg_history').append(bubble);

            updateScroll();
        }

        function endConversation() {
            var bubble = $(`<div class="end_of_conversation" style="
                                width: 100%;
                                text-align: center;
                                margin-top: 20px;
                                margin-bottom: 20px;
                            ">
                             <div class="badge badge-light" style="
                                color: #999;
                                padding: 6px 20px;
                            ">This conversation has ended! Please validate the results <a href="{{ path('project_validate', {id: project.id}) }}">here</a>!</div>
                            </div>`);

            $('#msg_history').append(bubble);

            $('#message_textbox').empty();

            updateScroll();
        }

        function sendMessage() {
            var text = $('#message').val();

            makeHumanBubble(text);

            $.ajax({
                url: "/project/{{ project.id }}/utter",
                method: "POST",
                data: {utterance: text},
                dataType: "json"
            }).done(function (jsonData) {
                if (!jsonData.end) {
                    makeRobotBubble(jsonData.reply);
                } else {
                    endConversation();
                }
            });

            $('#message').val('');
        }

        $('#msg_send_btn').on('click', function (e) {
            sendMessage();
        });

        $('#message').on('keyup', function (e) {
            if (e.which === 13) {
                sendMessage();
            }
        })

    </script>
{% endblock %}

